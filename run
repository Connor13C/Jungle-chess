# This script runs the server in the background. There is currently no way to stop the server unless you find the process and kill it, or find some way to crash the server.
# Use with caution.

# Compile the server code
javac src/main/edu/colostate/cs/cs414/method_men/jungle/server/*.java

# Compile the client code
javac src/main/edu/colostate/cs/cs414/method_men/jungle/client/*.java src/main/edu/colostate/cs/cs414/method_men/jungle/client/*/*.java

# Run the server
java -cp src/main/ edu/colostate/cs/cs414/method_men/jungle/server/TCPServer &

# Run the client
java -cp src/main/ edu/colostate/cs/cs414/method_men/jungle/client/socket/Client